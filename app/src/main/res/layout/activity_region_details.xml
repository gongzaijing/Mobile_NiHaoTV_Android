<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextAppearance="@style/ToolBar.TitleText" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            android:scrollbars="none">
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_layout_default_height"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tl_textSelectColor="@color/red"
            app:tl_indicator_color="@color/red"
            app:tl_textUnselectColor="@color/black_80"
            android:paddingLeft="@dimen/load_more_layout_circle_progress_size"
            android:paddingRight="@dimen/default_general_margin"
            app:tl_indicator_corner_radius="@dimen/tab_indicator_corner_tiny_radius"
            app:tl_indicator_height="@dimen/tab_indicator_small_height"
            app:tl_indicator_width="@dimen/tab_indicator_long_width"
            app:tl_tab_space_equal="false"
            android:isScrollContainer="false"
            />
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/navigation_subtitle_secondary_text"
            app:layout_scrollFlags="scroll|enterAlways"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            android:scrollbars="none">
            <com.flyco.tablayout.CommonTabLayout
                android:id="@+id/sliding_tabs2"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_height="@dimen/tab_layout_default_height"
            android:background="@color/white"
            app:tl_textSelectColor="@color/red"
            app:tl_indicator_color="@color/red"
            app:tl_textUnselectColor="@color/black_80"
                app:tl_textsize="14dp"
                android:paddingLeft="@dimen/load_more_layout_circle_progress_size"
            android:paddingRight="@dimen/default_general_margin"
            app:tl_indicator_corner_radius="@dimen/tab_indicator_corner_tiny_radius"
            app:tl_indicator_height="@dimen/tab_indicator_small_height"
            app:tl_indicator_width="@dimen/tab_indicator_long_width"
            app:tl_tab_space_equal="false"
            />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            android:scrollbars="none">
            <com.flyco.tablayout.CommonTabLayout
                android:id="@+id/sliding_tabs3"
                android:layout_width="match_parent"
                app:tl_textsize="14dp"
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_height="@dimen/tab_layout_default_height"
                android:background="@color/white"
                app:tl_textSelectColor="@color/red"
                app:tl_indicator_color="@color/red"
                app:tl_textUnselectColor="@color/black_80"
                android:paddingLeft="@dimen/load_more_layout_circle_progress_size"
                android:paddingRight="@dimen/default_general_margin"
                app:tl_indicator_corner_radius="@dimen/tab_indicator_corner_tiny_radius"
                app:tl_indicator_height="@dimen/tab_indicator_small_height"
                app:tl_indicator_width="@dimen/tab_indicator_long_width"
                app:tl_tab_space_equal="false"
                />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            android:scrollbars="none">
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/sliding_tabs4"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_height="@dimen/tab_layout_default_height"
            android:background="@color/white"
            android:isScrollContainer="true"
            app:tl_textsize="14dp"
            app:tl_textSelectColor="@color/red"
            app:tl_indicator_color="@color/red"
            app:tl_textUnselectColor="@color/black_80"
            android:paddingLeft="@dimen/load_more_layout_circle_progress_size"
            android:paddingRight="@dimen/default_general_margin"
            app:tl_indicator_corner_radius="@dimen/tab_indicator_corner_tiny_radius"
            app:tl_indicator_height="@dimen/tab_indicator_small_height"
            app:tl_indicator_width="@dimen/tab_indicator_long_width"
            app:tl_tab_space_equal="false"/>
        </HorizontalScrollView>
    </android.support.design.widget.AppBarLayout>>
    <com.china.cibn.bangtvmobile.bangtv.widget.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</android.support.design.widget.CoordinatorLayout>


